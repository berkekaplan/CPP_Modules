NAME	= PmergeMe
CC		= c++
FLAGS	= -Wall -Wextra -Werror -std=c++98
RM		= rm -rf
HEADER	= PmergeMe.hpp
SRCS    = PmergeMe.cpp main.cpp
OBJS    = $(SRCS:.cpp=.o)

all: coffee $(NAME)

$(NAME): $(OBJS)
	@echo "\033[3;35m 	- Coding merge-insert sort algorithm with ahkalama \033[m\n"
	@ $(CC) $(FLAGS) $(OBJS) -o $(NAME)

%.o: %.cpp $(HEADER)
	@$(CC) $(FLAGS) -c $< -o $@

clean:
	@$(RM) $(OBJS)
	@echo "\033[0;35m\n	  	 		Cleaning\033[m\n"

fclean: clean
	@$(RM) $(NAME)

re: fclean all

